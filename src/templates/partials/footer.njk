<footer class="bg-navy-900 text-white" role="contentinfo">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Column 1: Brand -->
            <div>
                <a href="{{ langPrefix }}/" class="inline-block mb-6" aria-label="{{ t.a11y.logo_aria }}">
                    <img src="{{ rootPath }}assets/logo/pcd-logo.png" alt="{{ t.a11y.logo_alt }}" class="h-8 w-auto" width="160" height="40">
                </a>
                <p class="text-sm text-white/60 leading-relaxed mb-6">{{ t.footer.description }}</p>
                <a href="https://www.linkedin.com/company/pcd-investment-partners/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-white/60 hover:text-white transition-colors" aria-label="PCD Investment Partners LinkedIn">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                    {{ t.footer.follow_linkedin }}
                </a>
            </div>

            <!-- Column 2: Ecosysteem -->
            <div>
                <h3 class="text-sm font-semibold uppercase tracking-wider text-white/40 mb-4">{{ t.footer.col_ecosystem }}</h3>
                <ul class="space-y-3">
                    <li><a href="{{ langPrefix }}/carehub-zorg-digitalisering" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.carehub }}</a></li>
                    <li><a href="{{ langPrefix }}/zorgorganisaties" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.healthcare_orgs }}</a></li>
                    <li><a href="{{ langPrefix }}/zorgtech-softwarebedrijven" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.healthtech }}</a></li>
                    <li><a href="{{ langPrefix }}/investeerders-partners" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.investors }}</a></li>
                    <li><a href="{{ langPrefix }}/cases" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.cases }}</a></li>
                    <li><a href="{{ langPrefix }}/insights" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.insights }}</a></li>
                </ul>
            </div>

            <!-- Column 3: Over PCD -->
            <div>
                <h3 class="text-sm font-semibold uppercase tracking-wider text-white/40 mb-4">{{ t.footer.col_about }}</h3>
                <ul class="space-y-3">
                    <li><a href="{{ langPrefix }}/pioneering-health-care-technology" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.about_pcd }}</a></li>
                    <li><a href="{{ langPrefix }}/leiderschap" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.leadership }}</a></li>
                    <li><a href="{{ langPrefix }}/esg-verklaring" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.esg }}</a></li>
                    <li><a href="{{ langPrefix }}/contact" class="text-sm text-white/60 hover:text-white transition-colors">{{ t.nav.contact }}</a></li>
                </ul>
            </div>

            <!-- Column 4: Contact -->
            <div>
                <h3 class="text-sm font-semibold uppercase tracking-wider text-white/40 mb-4">{{ t.footer.col_contact }}</h3>
                <address class="not-italic space-y-3 text-sm text-white/60">
                    <p>{{ t.footer.address | safe }}</p>
                    <p>
                        <a href="tel:+31653852753" class="hover:text-white transition-colors">+31 6 53 85 27 53</a>
                    </p>
                </address>
            </div>
        </div>

        <!-- Footer bottom -->
        <div class="mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row items-center justify-between gap-4">
            <p class="text-xs text-white/40">{{ t.footer.copyright | safe }}</p>
            <div class="flex gap-6">
                <a href="{{ langPrefix }}/privacyverklaring" class="text-xs text-white/40 hover:text-white transition-colors">{{ t.footer.privacy }}</a>
                <a href="{{ langPrefix }}/cookiebeleid-eu" class="text-xs text-white/40 hover:text-white transition-colors">{{ t.footer.cookies }}</a>
            </div>
        </div>
    </div>
</footer>
