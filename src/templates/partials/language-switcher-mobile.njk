<!-- Mobile Language Switcher -->
<div class="mt-4 pt-4 border-t border-white/10">
    <div class="space-y-1">
        {% for switchLang in languageSwitchUrls %}
        {% if switchLang.code == lang %}
        <span class="block px-3 py-2 text-sm font-bold text-white">{{ switchLang.label }}</span>
        {% else %}
        <a href="{{ switchLang.url }}" hreflang="{{ switchLang.hreflang }}" class="block px-3 py-2 text-sm text-white/70 hover:text-white transition-colors">{{ switchLang.label }}</a>
        {% endif %}
        {% endfor %}
    </div>
</div>
